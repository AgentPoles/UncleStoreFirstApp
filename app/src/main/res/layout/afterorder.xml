<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="#0a2149">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/afterhomee"
        android:layout_margin="10dp"
        android:src="@mipmap/de"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:textColor="@android:color/darker_gray"
        android:id="@+id/aftertitle"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/afterhomee"
        android:text="the Boyzerettetett"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="31dp" />
    <TextView
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/aftertitle"
        android:id="@+id/aftersubi"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/afterhomee"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:text="delivere22eennnnnnnnnnnnnnnnee"
        android:layout_width="150dp"
        android:layout_height="15dp" />
    <ImageView
        android:id="@+id/afterruni"
        android:layout_below="@+id/aftertitle"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@+id/aftersubi"
        android:src="@drawable/ic_directions_run_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/whatobuy"
        android:layout_marginTop="18dp"
        android:background="@android:drawable/editbox_background"
        android:layout_centerInParent="true"
        android:layout_below="@+id/afterruni"
        android:layout_width="150dp"
        android:layout_height="100dp" />
    <TextView
        android:text="pure Water"
        android:textSize="20sp"
        android:id="@+id/nameo"
        android:textColor="#eee6a4"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/whatobuy"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <TextView

        android:text="#12888"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/afterprico"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/nameo"
        android:layout_width="200dp"
        android:layout_height="30dp" />
    <LinearLayout
        android:id="@+id/linlino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#192128"
        android:layout_marginRight="10dp"
       android:layout_marginTop="10dp"
        android:layout_below="@+id/afterprico">
        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@mipmap/bizmano"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    <TextView
        android:textStyle="bold"
        android:textColor="#eee6a4"
        android:text="All deliveries would be made in the evening between the hours of six(6) and eight(8). "
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/arrowproceed"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linlino"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_width="50dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/afterproceed"
        android:text="proceed"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/arrowproceed"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        android:layout_centerInParent="true"
        android:paddingTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>