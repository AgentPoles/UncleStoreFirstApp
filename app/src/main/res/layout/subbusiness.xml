<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
<android.support.v7.widget.CardView
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/card_view"
   android:elevation="20dp"
android:layout_width="200dp"
    android:layout_margin="5dp"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="#0a2149"
android:layout_height="wrap_content"
card_view:cardCornerRadius="20dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="8dp"
    android:clickable="true"
    android:id="@+id/wholelasubbusiness"
    android:background="#0a2149"
    android:layout_height="200dp">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/momogo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:src="@mipmap/de"
    android:layout_width="70dp"
    android:layout_height="70dp" />
    <TextView
        android:textSize="25sp"
        android:textColor="#eee6a4"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/momogo"
        android:text="ABBOYZ"
        android:layout_marginRight="50dp"
        android:id="@+id/bustitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    <TextView
        android:text="delivery on the go.."
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff00"
        android:layout_marginRight="5dp"
        android:id="@+id/busmotto"
        android:layout_below="@+id/bustitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />
    <CheckBox
        android:layout_below="@+id/busmotto"
        style="?android:starStyle"
        android:id="@+id/rated"
        android:layout_marginBottom="2dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:textColor="@android:color/holo_orange_dark"
        android:text="touch to order goods and services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>