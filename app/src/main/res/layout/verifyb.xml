<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#036576">

    <de.hdodenhof.circleimageview.CircleImageView

        android:src="@mipmap/oops"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
     android:textColor="#eee6a4"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="@string/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginLeft="0dp"
        android:text="Please Re-check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/vemailb"
        android:textColor="#Be574e"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="Re-enter email"
        android:textColorHint="#be574e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ve"
        android:clickable="true"
        android:src="@drawable/ic_offline_pin_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</LinearLayout>