<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_marginTop="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:elevation="0dp"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"
        card_view:cardBackgroundColor="#645464"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:clickable="true"
            android:background="#645464"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/whatwedo"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:text="Did you know you can get your egg, indomie and lot more delivered at your door steps?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/track"
                android:layout_above="@+id/logi"
                android:textColor="#000000"
                android:text="order from"
                android:layout_marginBottom="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/logi"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/spico"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/de"
                android:layout_width="30dp"
                android:layout_height="30dp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                android:textSize="25sp"
                android:textColor="#eee6a4"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:text="ABBOYZ"
                android:layout_marginRight="50dp"
                android:id="@+id/spicename"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:text="08138537312"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_green_light"
                android:layout_marginRight="5dp"
                android:id="@+id/spicecontact"
                android:layout_below="@+id/spicename"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>