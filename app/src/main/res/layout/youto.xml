<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#192128"
    android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:src="@mipmap/crazyidea"
    android:layout_gravity="center"
    android:layout_marginTop="30dp"
    android:layout_width="200dp"
    android:layout_height="200dp" />
    <TextView
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:layout_margin="20dp"
        android:text="@string/youtoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/oocontact"
        android:textColor="#eee6a4"
        android:paddingTop="3dp"
        android:text="contact the framework-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/oonumber"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/oocontact"
            android:text="08138537312"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>