<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mycompany.myapp.bframework.BlankFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/spicer"
            android:layoutMode="clipBounds"
            android:layoutDirection="locale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/spicerr"
                  android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/upa"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#0a2149"
                    android:background="#fbfad2"
                    android:layout_centerHorizontal="true"
                    android:text="Advertize what you do on Framespice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_below="@+id/upa"
                    android:id="@+id/firstlio"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <fragment
                        android:id="@+id/spicingfra"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="200dp"
                        android:layout_alignParentRight="true"
                        android:layout_height="match_parent"
                        android:name="com.mycompany.myapp.bframework.Jspicofra"
                        tools:layout="@layout/spicofra" />
                    <ImageView
                        android:layout_toLeftOf="@id/spicingfra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/firstlio"
                    android:layout_width="match_parent"
                    android:background="@color/black_overlay"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/spicpics"
                                android:layout_gravity="center"
                                android:src="@drawable/picture"
                                android:layout_width="150dp"
                                android:layout_height="150dp" />
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/uploade"
                                android:src="@drawable/uploade"
                                android:layout_toRightOf="@+id/spicpics"
                                android:layout_width="50dp"
                                android:layout_alignBottom="@+id/spicpics"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_toRightOf="@+id/uploade"
                                android:layout_alignBottom="@+id/uploade"
                                android:textSize="20sp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:text="load image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <EditText
                            android:hint="Comment"
                            android:layout_margin="15dp"
                            android:textSize="15sp"
                            android:background="@android:drawable/editbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:hint="business Name"
                            android:layout_margin="15dp"
                            android:textSize="15sp"
                            android:background="@android:drawable/editbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:hint="business contact"
                            android:layout_margin="15dp"
                            android:textSize="15sp"
                            android:background="@android:drawable/editbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:hint="relation"
                            android:layout_margin="15dp"
                            android:textSize="15sp"
                            android:background="@android:drawable/editbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            app:backgroundTint="#ffffff"
            android:src="@drawable/ic_offline_pin_black_24dp"
            android:id="@+id/donne"
   android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="60dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/proceed"
                android:layout_width="50dp"
                app:backgroundTint="#ffffff"
                android:visibility="gone"
                android:src="@drawable/nextoi"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="25dp"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/spicernextr"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/spicingefra"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="200dp"
                android:name="com.mycompany.myapp.bframework.Jspicofra"
                tools:layout="@layout/spicofra" />
            <TextView
                android:id="@+id/texxte"
                android:layout_below="@+id/spicingefra"
                android:layout_marginTop="0dp"
                android:textSize="30sp"
                android:textColor="#0a2149"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="Background Color"
                android:background="@android:drawable/toast_frame"
                android:layout_width="wrap_content"
                android:backgroundTint="#ffffff"
                android:layout_height="wrap_content" />
            <GridView
                android:layout_marginTop="20dp"
                android:layout_below="@+id/texxte"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thegrid"
                android:numColumns="6"
                />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                app:backgroundTint="#fbfad2"
                android:src="@drawable/nextoi"
                android:id="@+id/donnep"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_height="60dp" />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/prev"
                android:layout_width="50dp"
                app:backgroundTint="#fbfad2"
                android:src="@drawable/previous"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="80dp"
                android:layout_marginRight="25dp"
                android:layout_height="50dp" />



</RelativeLayout>
    </FrameLayout>
<android.support.design.widget.FloatingActionButton
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/spiceeadd"
    android:src="@drawable/newadd"
    app:backgroundTint="@color/black_overlay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</RelativeLayout>
</RelativeLayout>