<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#0a2149">

    <ImageView

        android:src="@drawable/ic_perm_identity_black_24dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:textColor="#EEE6a4"
        android:layout_marginLeft="0dp"
        android:text="Account creation is ongoing.. please,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/passy"
        android:textColor="#Be574e"
        android:layout_marginLeft="5dp"
        android:inputType="numberPassword"
        android:layout_marginTop="10dp"
        android:hint="Choose atleast a 6 digit PassWord"
        android:textColorHint="#be574e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/confpassy"
        android:textColor="#Be574e"
        android:inputType="numberPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:hint="Confirm PassWord!"
        android:textColorHint="#be574e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/passyclick"
        android:src="@drawable/ic_offline_pin_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</LinearLayout>